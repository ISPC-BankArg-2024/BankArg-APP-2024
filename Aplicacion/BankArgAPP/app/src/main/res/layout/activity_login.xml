<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/col1"
    tools:context=".LoginActivity">

    <ImageButton
        android:id="@+id/imageButton9"
        android:layout_width="250dp"
        android:layout_height="270dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:adjustViewBounds="true"
        android:background="@null"
        android:isScrollContainer="false"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.062"
        app:srcCompat="@drawable/logo_no_background_1"
        android:contentDescription="logo bankarg"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="349dp"
        android:layout_height="355dp"
        android:layout_margin="30dp"
        app:cardBackgroundColor="@color/col2"
        app:cardCornerRadius="30dp"
        app:cardElevation="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="#2C3133"
            android:orientation="vertical"
            android:padding="25dp">

            <TextView
                android:id="@+id/loginText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="INICIAR SESION"
                android:textAlignment="center"
                android:textColor="@color/col2"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/borde_redondeado"
                android:drawableLeft="@drawable/baseline_person_24"
                android:drawablePadding="8dp"
                android:hint="Usuario"
                android:padding="8dp"
                android:textColor="#2C3333"
                android:textColorHighlight="#2C3333"
                android:textColorHint="#2C3333"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/borde_redondeado"
                android:drawableLeft="@drawable/baseline_lock_person_24"
                android:drawablePadding="8dp"
                android:hint="ContraseÃ±a"
                android:inputType="textPassword"
                android:padding="8dp"
                android:textColor="#2C3333"
                android:textColorHighlight="#2C3333"
                android:textColorHint="#2C3333"
                android:textSize="14sp" />

            <Button
                android:id="@+id/loginButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/col3"
                android:text="INGRESAR"
                android:textColor="@color/col2"
                android:textSize="14sp"
                app:cornerRadius="24dp" />

            <TextView
                android:id="@+id/signupText"
                android:layout_width="293dp"
                android:layout_height="49dp"
                android:layout_marginTop="20dp"
                android:clickable="true"
                android:onClick="onClick"
                android:padding="8dp"
                android:text="No estas registrado? Registrate ahora"
                android:textAlignment="center"
                android:textColor="@color/col2"
                android:textColorLink="@color/col3"
                android:textSize="15sp"
                android:textStyle="italic" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>